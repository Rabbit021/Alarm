<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Alarm.TimeClockControl"
	x:Name="UserControl">
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Vertical">
            <TextBlock  Text="河北广播电视台"  Style="{DynamicResource MarkBottomTextblockStyle}"/>
            <TextBlock Text="广播技术中心"  Style="{DynamicResource MarkBottomTextblockStyle}"/>
            <TextBlock  Style="{DynamicResource MarkBottomTextblockStyle}">
                <Run Text="{Binding NowTime}" ></Run></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>